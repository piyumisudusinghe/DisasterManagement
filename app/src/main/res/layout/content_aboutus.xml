<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.piumi.disaster_management.Aboutus"
    tools:showIn="@layout/activity_aboutus"
    android:background="#2f77ab">

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/company_logo1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="@dimen/_36sdp"/>


    <TextView
        android:id="@+id/company_name"
        android:layout_below="@+id/company_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_36sdp"
        android:background="#2da4b1"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Disaster-Alerts"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/company_subname"
        android:layout_below="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2da4b1"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Disaster Management System"
        android:textAlignment="center"/>
    <TextView
        android:layout_below = "@+id/company_subname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_36sdp"
        android:background="@drawable/about_us_background"
        android:text="We are team of disaster management system.Our comany is combination of two institutions.Those are Ministry of Disaster Management and Department of Meteorology.
Group of people who are selected from those organization are worked to provide this service."

        android:textAlignment="center"/>

</RelativeLayout>
